{
  "kind": "collectionType",
  "collectionName": "oauth_tokens",
  "info": {
    "singularName": "oauth-token",
    "pluralName": "oauth-tokens",
    "displayName": "OAuth Token",
    "description": "OAuth 2.0 access tokens"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": false
    },
    "content-type-builder": {
      "visible": false
    }
  },
  "attributes": {
    "accessToken": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "refreshToken": {
      "type": "string",
      "unique": true
    },
    "clientId": {
      "type": "string",
      "required": true
    },
    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "refreshExpiresAt": {
      "type": "datetime"
    },
    "revoked": {
      "type": "boolean",
      "default": false
    }
  }
}
